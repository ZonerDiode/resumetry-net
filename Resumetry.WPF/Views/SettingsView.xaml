<UserControl x:Class="Resumetry.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Resumetry.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="700">

    <Grid Background="{StaticResource LightGrayBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="32,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                           Text="Settings"
                           Style="{StaticResource HeaderTextStyle}"
                           Margin="0,0,0,24"/>
                
                <!-- Close Button -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Close"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding CloseCommand}"
                            Width="120"
                            Height="40"/>
                </StackPanel>
                
                <!-- Import / Export Section -->
                <Border Grid.Row="1" Background="White" Padding="24" Margin="0,0,0,16" CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <TextBlock Grid.Row="0"
                                   Text="Import / Export"
                                   Style="{StaticResource SectionHeaderStyle}"
                                   Margin="0,0,0,16"/>

                        <!-- Import Button -->
                        <Button Grid.Row="1"
                                Content="Import from JSON"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding ImportFromJsonCommand}"
                                HorizontalAlignment="Left"
                                Width="200"
                                Height="40"
                                Margin="0,0,0,12"/>

                        <!-- Export Button -->
                        <Button Grid.Row="2"
                                Content="Export to JSON"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding ExportToJsonCommand}"
                                HorizontalAlignment="Left"
                                Width="200"
                                Height="40"/>
                    </Grid>
                </Border>

                <!-- Status Section -->
                <Border Grid.Row="2" Background="{StaticResource LightBlueBrush}" Padding="24" Margin="0,0,0,16" CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Status"
                                   Style="{StaticResource SectionHeaderStyle}"
                                   Margin="0,0,0,12"/>

                        <TextBox Grid.Row="1"
                                 Text="{Binding StatusMessage, Mode=OneWay}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 MinHeight="80"
                                 Background="White"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 BorderThickness="1"
                                 Padding="12"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
