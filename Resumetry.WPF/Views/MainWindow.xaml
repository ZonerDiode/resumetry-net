<Window x:Class="Resumetry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resumetry"
        xmlns:vm="clr-namespace:Resumetry.ViewModels"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        d:DataContext="{d:DesignInstance Type=vm:ShellViewModel}"
        mc:Ignorable="d"
        Title="Resumetry"
        Height="1200"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Icon="/favicon.ico"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False" RenderTransformOrigin="0.5,0.5">

    <!-- Keep resize, shadow and custom caption area -->
    <WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="12"
                            CornerRadius="12"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="6"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header used as custom title bar -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryBlueBrush}"
                Padding="12,12"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: App title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Resumetry" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="8,0"/>
                </StackPanel>

                <!-- Right: window controls -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="8,0,0,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button x:Name="MinimizeButton"
                            Style="{StaticResource IconButtonStyle}"
                            Click="MinimizeButton_Click"
                            Width="44"
                            Height="32"
                            ToolTip="Minimize"
                            Foreground="White">
                        <TextBlock FontSize="14" Text="—" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <Button x:Name="MaxRestoreButton"
                            Style="{StaticResource IconButtonStyle}"
                            Click="MaxRestoreButton_Click"
                            Width="44"
                            Height="32"
                            ToolTip="Maximize / Restore"
                            Foreground="White">
                        <TextBlock x:Name="MaxRestoreGlyph" FontSize="12" Text="▢" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <Button x:Name="CloseButton"
                            Style="{StaticResource IconButtonStyle}"
                            Click="CloseButton_Click"
                            Width="44"
                            Height="32"
                            ToolTip="Close"
                            Foreground="White">
                        <TextBlock FontSize="12" Text="✕" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content: Single ContentControl for view swapping -->
        <ContentControl Grid.Row="1"
                        Content="{Binding CurrentView, NotifyOnTargetUpdated=True}"
                        Style="{StaticResource TransitionContentStyle}"/>
    </Grid>
</Window>
