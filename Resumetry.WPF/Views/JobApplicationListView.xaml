<UserControl x:Class="Resumetry.Views.JobApplicationListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Resumetry.ViewModels"
             xmlns:converters="clr-namespace:Resumetry.Converters"
             xmlns:helpers="clr-namespace:Resumetry.Helpers"
             d:DataContext="{d:DesignInstance Type=vm:JobApplicationListViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             d:DesignHeight="1100" d:DesignWidth="1200"
             Loaded="JobApplicationListView_OnLoaded">

    <UserControl.Resources>
        <converters:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Section with Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Job Applications" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Style="{StaticResource SubHeaderTextStyle}">
                    <Run Text="Showing"/>
                    <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                    <Run Text="most recent applications"/>
                </TextBlock>
            </StackPanel>

            <!-- Controls on the Right -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- View Mode Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,0,4,0">
                    <Button Style="{StaticResource IconButtonStyle}" Width="36" Height="36" Margin="0,0,4,0" ToolTip="Settings"
                            Command="{Binding OpenSettingsCommand}">
                        <Path Data="M3,3 h7 v7 h-7 z M13,3 h7 v7 h-7 z M3,13 h7 v7 h-7 z M13,13 h7 v7 h-7 z"
                              Fill="{StaticResource PrimaryBlueBrush}"
                              Stretch="Uniform" Width="16" Height="16"/>
                    </Button>
                    <Button Width="36" Height="36" Margin="0,0,4,0" ToolTip="List View"
                            Command="{Binding ToggleListViewCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsListView}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Path Data="M0,0 h20 v4 h-20 z M0,8 h20 v4 h-20 z M0,16 h20 v4 h-20 z"
                              Stretch="Uniform" Width="16" Height="16">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Fill" Value="{StaticResource MediumTextBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                            <Setter Property="Fill" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Button>
                    <Button Width="36" Height="36" ToolTip="Recruiter View"
                            Command="{Binding ToggleRecruiterViewCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsListView}" Value="False">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Path Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                              Stretch="Uniform" Width="16" Height="16">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Fill" Value="{StaticResource MediumTextBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                            <Setter Property="Fill" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Button>
                </StackPanel>

                <!-- Filter TextBox -->
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         helpers:WatermarkHelper.Watermark="Filter by company..."
                         Width="300"
                         Height="36"
                         VerticalContentAlignment="Center"
                         Margin="0,0,8,0"
                         ToolTip="Filter by company"/>

                <!-- Action Buttons -->
                <Button Content="+ New Application"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding NewApplicationCommand}"
                        Height="36"
                        Margin="0,0,8,0"/>
                <Button Content="Delete"
                        Style="{StaticResource DangerButtonStyle}"
                        Command="{Binding DeleteApplicationCommand}"
                        Height="36"
                        Margin="0,0,8,0"/>
                <Button Content="Reports"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding ReportsCommand}"
                        Height="36"/>
            </StackPanel>
        </Grid>

        <!-- List View (Data Grid) - visible when NOT in recruiter view -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsListView}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <DataGrid ItemsSource="{Binding FilteredJobApplications}"
                      SelectedItem="{Binding SelectedJobApplication}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None"
                      SelectionMode="Single"
                      BorderThickness="1"
                      RowHeight="35"
                      AlternatingRowBackground="#FAFAFA"
                      MouseDoubleClick="DataGrid_MouseDoubleClick">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource LightBlueBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Padding" Value="12,12"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          TextElement.Foreground="{TemplateBinding Foreground}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <!-- TOP Column -->
                    <DataGridTemplateColumn Header="TOP" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Viewbox Width="20" Height="20"
                                         Visibility="{Binding TopJob, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Path Data="M12,17.27L18.18,21l-1.64-7.03L22,9.24l-7.19-0.61L12,2 9.19,8.63 2,9.24l5.46,4.73L5.82,21z"
                                          Fill="#FFC107"/>
                                </Viewbox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Company Column -->
                    <DataGridTextColumn Header="COMPANY"
                                        Binding="{Binding Company}"
                                        Width="2*"
                                        MinWidth="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Role Column -->
                    <DataGridTextColumn Header="POSITION"
                                        Binding="{Binding Position}"
                                        Width="2*"
                                        MinWidth="200">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Salary Column -->
                    <DataGridTextColumn Header="SALARY"
                                        Binding="{Binding Salary}"
                                        Width="160"
                                        MinWidth="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Applied Date Column -->
                    <DataGridTextColumn Header="APPLIED"
                                        Binding="{Binding AppliedDate, StringFormat='MMM dd, yyyy'}"
                                        Width="120"
                                        MinWidth="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Status Column -->
                    <DataGridTemplateColumn Header="STATUS" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding CurrentStatus, Converter={StaticResource StatusToBrushConverter}}"
                                        CornerRadius="4"
                                        Padding="12,4"
                                        HorizontalAlignment="Center" Width="90">
                                    <TextBlock Text="{Binding CurrentStatusText}"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               FontSize="11"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Recruiter View - visible when in recruiter view -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding IsListView, Converter={StaticResource BoolToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding FilteredJobApplications}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,12" CornerRadius="4"
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                Background="White">
                            <Grid>
                                <!-- Left accent bar -->
                                <Border Background="{StaticResource LightBlueBrush}"
                                        Width="6" HorizontalAlignment="Left"
                                        CornerRadius="4,0,0,4"/>

                                <StackPanel Margin="6,0,0,0">
                                    <!-- Row 1: Recruiter Header -->
                                    <Border Background="{StaticResource LightBlueBrush}"
                                            Padding="16,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding RecruiterName}"
                                                       FontWeight="Bold" FontSize="14"
                                                       Foreground="{StaticResource DarkTextBrush}"/>
                                            <TextBlock Text="{Binding RecruiterCompany}"
                                                       FontSize="14" Margin="16,0,0,0"
                                                       Foreground="{StaticResource MediumTextBrush}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Row 2: Job Application Details -->
                                    <Grid Margin="16,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2.5*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Company}"
                                                   FontWeight="Bold" FontSize="14"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Position}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Salary, TargetNullValue='â€”'}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{Binding AppliedDate, StringFormat='MMM dd, yyyy'}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                        <Border Grid.Column="4"
                                                Background="{Binding CurrentStatus, Converter={StaticResource StatusToBrushConverter}}"
                                                CornerRadius="4" Padding="12,4"
                                                HorizontalAlignment="Center" Width="90"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentStatusText}"
                                                       Foreground="White" FontWeight="Bold"
                                                       FontSize="11" HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>

                                    <!-- Row 3: Application Events -->
                                    <ItemsControl ItemsSource="{Binding ApplicationEvents}"
                                                  Margin="16,0,16,12">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,4,0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Occurred, StringFormat='MMM dd, yyyy'}"
                                                               FontSize="13"
                                                               Foreground="{StaticResource PrimaryBlueBrush}"/>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Description}"
                                                               FontSize="13" TextWrapping="Wrap"
                                                               Foreground="{StaticResource DarkTextBrush}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
