<Window x:Class="Resumetry.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resumetry.Views"
        xmlns:vm="clr-namespace:Resumetry.ViewModels"
        mc:Ignorable="d"
        Title="Settings" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlueBrush}" Padding="24,16">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Background="{StaticResource LightGrayBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="32,24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Import / Export Section -->
                    <Border Grid.Row="0" Background="White" Padding="24" Margin="0,0,0,16" CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Section Header -->
                            <TextBlock Grid.Row="0"
                                       Text="Import / Export"
                                       Style="{StaticResource SectionHeaderStyle}"
                                       Margin="0,0,0,16"/>

                            <!-- Import Button -->
                            <Button Grid.Row="1"
                                    Content="Import from JSON"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding ImportFromJsonCommand}"
                                    HorizontalAlignment="Left"
                                    Width="200"
                                    Height="40"
                                    Margin="0,0,0,12"/>

                            <!-- Export Button -->
                            <Button Grid.Row="2"
                                    Content="Export to JSON"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding ExportToJsonCommand}"
                                    HorizontalAlignment="Left"
                                    Width="200"
                                    Height="40"/>
                        </Grid>
                    </Border>

                    <!-- Status Section -->
                    <Border Grid.Row="1" Background="{StaticResource LightBlueBrush}" Padding="24" Margin="0,0,0,16" CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Status"
                                       Style="{StaticResource SectionHeaderStyle}"
                                       Margin="0,0,0,12"/>

                            <TextBox Grid.Row="1"
                                     Text="{Binding StatusMessage, Mode=OneWay}"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     Background="White"
                                     BorderBrush="{StaticResource BorderBrush}"
                                     BorderThickness="1"
                                     Padding="12"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </Border>

                    <!-- Spacer -->
                    <Border Grid.Row="2"/>

                    <!-- Close Button -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Close"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="CloseButton_Click"
                                Width="120"
                                Height="40"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
